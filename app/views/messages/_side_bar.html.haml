.chat-side
  .side-header
    .side-header__box
      %p.user-name 
        = current_user.name
      %ul.menu
        %li.edit-user
          =link_to new_group_path do
            =icon('fas','edit')
        %li.new-group
          =link_to edit_user_path(current_user) do
            =icon('fas','cog')
  .chat-side__groups
    -current_user.groups.each do |group|
      = link_to "#" , class:"group" do
        %p.group__group-name
          = group.name
        %p.group__light-message
          まだメッセージがありません